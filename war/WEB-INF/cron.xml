<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
  <cron>
    <url>/Tasks/updateSparkRatings</url>
    <description>Update Spark Popularity Ratings</description>
    <schedule>every 2 hours</schedule>
  </cron>
  <cron>
    <url>/Tasks/commentRepair</url>
    <description>Repair Spark comment count</description>
    <schedule>every 6 hours</schedule>
  </cron>
  <cron>
    <url>/Tasks/execute?taskClassName=net.sparkmuse.task.UpdateUserStatisticsTask</url>
    <description>Repair Spark comment count</description>
    <schedule>every 1 hours</schedule>
  </cron>
  <cron>
    <url>/Tasks/execute?taskClassName=net.sparkmuse.task.ActivityUpdateTask</url>
    <description>Send activity update emails</description>
    <schedule>every 20 minutes</schedule>
  </cron>
</cronentries>