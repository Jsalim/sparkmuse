<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
  <cron>
    <url>/Tasks/updateSparkRatings</url>
    <description>Update Spark Popularity Ratings</description>
    <schedule>every 2 hours</schedule>
  </cron>
  <cron>
    <url>/Tasks/commentRepair</url>
    <description>Repair Spark comment count</description>
    <schedule>every 6 hours</schedule>
  </cron>
  <cron>
    <url>/Tasks/execute?taskClassName=net.sparkmuse.task.UpdateUserStatisticsTransformationTask</url>
    <description>Repair Spark comment count</description>
    <schedule>every 1 hours</schedule>
  </cron>
  <cron>
    <url>/Tasks/execute?taskClassName=net.sparkmuse.task.ActivityUpdateMultiTask</url>
    <description>Send activity update emails</description>
    <schedule>every 3 minutes</schedule>
  </cron>
  <cron>
    <url>/Tasks/execute?taskClassName=net.sparkmuse.task.PeoplePageElgibilityTransformationTask</url>
    <description>Determine if a user is elgible for placement on the people page</description>
    <schedule>every 30 minutes</schedule>
  </cron>
</cronentries>